
auto lo
iface lo inet loopback

iface eno1 inet manual

iface eno2 inet manual

iface eno3 inet manual

iface eno4 inet manual

iface enp6s0 inet manual # 10G uplink to CRS326

iface enp7s0f0 inet manual # 10G vlan30 access

iface enp7s0f1 inet manual # 10G vlan30 access

auto vmbr0
iface vmbr0 inet manual
        bridge-ports enp6s0
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 20 30 40

auto vmbr_LAN # This is a internal bridge just for experimenting with CHRs
iface vmbr_LAN inet manual
        bridge-ports none
        bridge-stp off
        bridge-fd 0

auto vmbr1
iface vmbr1 inet manual
        bridge-ports enp7s0f0 enp7s0f1
        bridge-stp off
        bridge-fd 0

auto vmbr0.20
iface vmbr0.20 inet static
        address 10.1.2.30/27
        gateway 10.1.2.1

source /etc/network/interfaces.d/*
